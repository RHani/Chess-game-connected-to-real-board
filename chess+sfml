};
float Knight[8][8] =
{
	{ -5.0,-4.0,-3.0,-3.0,-3.0,-3.0,-4.0,-5.0 },
	{ -4.0,-2.0,0.0,0.5,0.5,0.0,-2.0,-4.0 },
	{ -3.0,0.5,1.0,1.5,1.5,1.0,0.5,-3.0 },
